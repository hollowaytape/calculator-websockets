html
   head
      title Calculator Web App
      link(href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet" type="text/css")
      link(href="/public/css/main.css" rel="stylesheet" type="text/css")
      link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", rel="stylesheet", type="text/css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")

   body
      #calculator.centered
         input#results(type="text" value="0" disabled)
         .row.btn-row
            button.btn.btn-primary.btn-val(value=7) 7
            button.btn.btn-primary.btn-val(value=8) 8
            button.btn.btn-primary.btn-val(value=9) 9
            button.btn.btn-secondary.btn-op(value=" / ") %
         .row.btn-row
            button.btn.btn-primary.btn-val(value=4) 4
            button.btn.btn-primary.btn-val(value=5) 5
            button.btn.btn-primary.btn-val(value=6) 6
            button.btn.btn-secondary.btn-op(value=" * ") *
         .row.btn-row
            button.btn.btn-primary.btn-val(value=1) 1
            button.btn.btn-primary.btn-val(value=2) 2
            button.btn.btn-primary.btn-val(value=3) 3
            button.btn.btn-secondary.btn-op(value=" - ") -
         .row.btn-row
            button.btn.btn-primary.btn-val(value='.') .
            button.btn.btn-primary.btn-val(value=0) 0
            button.btn.btn-primary.btn-val 
            button.btn.btn-secondary.btn-op(value=" + ") +
            button.btn.btn-warning.btn-equal =

      hr
      .centered
         p.centered #[strong Recent global calculations]:
         .centered#calculations

      script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
      script(type="text/javascript" src="/controllers/calcController.client.js")
